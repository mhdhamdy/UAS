import 'package:flutter/material.dart';

void main() {
  runApp(MaterialApp(
    home: Informasi(),
  ));
}

class Informasi extends StatelessWidget {
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Informasi Mahasiswa (6SIA1)'),
      ),
      floatingActionButton: FloatingActionButton.extended(
          icon: Icon(Icons.add),
          label: Text('Input Data'),
          onPressed: () {
            Navigator.push(
              context,
              MaterialPageRoute(builder: (context) => InputData()),
            );
          }),
      body: ListView(
        children: ListTile.divideTiles(
          context: context,
          tiles: [
            ListTile(
              leading: Icon(Icons.people),
              title: Text("mhd.hamdyadlan"),
              subtitle: Text("laki-laki"),
              trailing: Text("Sistem Informasi"),
            ),
          ],
        ).toList(),
      ),
    );
  }
}

class InputData extends StatelessWidget {
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text("Input Data Mahasiswa"),
      ),
      body: Container(
        padding: EdgeInsets.all(20.0),
        child: Column(
          children: [
            TextField(
              decoration: InputDecoration(labelText: "Nama Mahasiswa"),
            ),
            RadioListTile(
              title: Text('Perempuan'),
              value: null,
              groupValue: null,
              onChanged: null,
            ),
            RadioListTile(
              title: Text('Laki-laki'),
              value: "Laki-laki",
              groupValue: null,
              onChanged: null,
            ),
            DropdownButton(
              isExpanded: true,
              hint: Text('Pilih Jurusan'),
              items: null,
              onChanged: null,
            ),
            RaisedButton(
              child: Text("Simpan"),
              onPressed: () {},
            ),
          ],
        ),
      ),
    );
  }
}
